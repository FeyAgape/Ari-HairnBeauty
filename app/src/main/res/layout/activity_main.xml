<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fey_agape.arihairnbeauty.MainActivity">
    <!-- Welcome Screen -->

    <RelativeLayout
        android:id="@+id/welcome_message_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible">


        <ImageView
            android:id="@+id/welcome_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/content_description"
            android:scaleType="centerCrop"
            android:src="@drawable/ari2" />

        <!-- Comment out for now, might not be needed anymore
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textSize="42sp"
            android:text="@string/title"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#fff"
            android:textStyle="bold" />   -->

        <Button
            style="@style/WelcomeButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/large"
            android:elevation="12dp"
            android:onClick="dismisWelcomeMessageScreen"
            android:text="@string/button" />

    </RelativeLayout>

    <!-- Main Screen -->
    <ScrollView
        android:id="@+id/app_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#F1F1F1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xsmall"
                android:background="#FFF"
                android:elevation="4dp">


                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_size"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/content_description"
                    android:scaleType="centerCrop"
                    android:src="@drawable/helen2e" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_size"
                    android:background="@drawable/scrim" />

                <TextView
                    android:id="@+id/intro"
                    style="@style/Title"
                    android:layout_above="@+id/intro1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="@dimen/small"
                    android:text="@string/full_name"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/intro1"
                    style="@style/Description"
                    android:layout_alignBottom="@+id/image"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/large"
                    android:layout_marginLeft="@dimen/small"
                    android:text="@string/intro"
                    android:textColor="#fff" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/intro"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:background="#757575"
                    android:clickable="true"
                    app:backgroundTint="@color/colorGrey"
                    app:elevation="6dp"
                    app:fabSize="normal"
                    app:pressedTranslationZ="12dp"
                    app:srcCompat="@android:drawable/ic_dialog_email" />

            </RelativeLayout>

            <!-- Social -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xsmall"
                android:background="#fff"
                android:elevation="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/social_contact"
                    style="@style/Title"
                    android:text="@string/social_contact" />

                <LinearLayout
                    android:id="@+id/Social"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/xsmall">

                    <ImageView
                        android:id="@+id/location"
                        style="@style/SocialImageView"
                        android:contentDescription="@string/content_description"
                        android:src="@drawable/location" />

                    <TextView
                        android:id="@+id/address"
                        style="@style/SocialTextView"
                        android:text="@string/location" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Social1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/xsmall">

                    <ImageView
                        android:id="@+id/phone"
                        style="@style/SocialImageView"
                        android:contentDescription="@string/content_description"
                        android:src="@drawable/phone" />

                    <TextView
                        android:id="@+id/contact"
                        style="@style/SocialTextView"
                        android:text="@string/phone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/social3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/xsmall">

                    <ImageView
                        android:id="@+id/fb"
                        style="@style/SocialImageView"
                        android:contentDescription="@string/content_description"
                        android:src="@drawable/fb" />

                    <TextView
                        android:id="@+id/social_fb"
                        style="@style/SocialTextView"
                        android:text="@string/social_fb" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/social4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/xsmall">

                    <ImageView
                        android:id="@+id/insta"
                        style="@style/SocialImageView"
                        android:contentDescription="@string/content_description"
                        android:src="@drawable/insta" />

                    <TextView
                        android:id="@+id/social_insta"
                        style="@style/SocialTextView"
                        android:text="@string/social_insta" />

                </LinearLayout>
            </LinearLayout>

            <!-- Look Book -->
            <TextView
                android:id="@+id/photos"
                style="@style/Title"
                android:layout_marginLeft="@dimen/xsmall"
                android:layout_marginRight="@dimen/xsmall"
                android:layout_marginTop="@dimen/xsmall"
                android:background="#fff"
                android:elevation="8dp"
                android:padding="@dimen/medium"
                android:text="@string/clients_photo" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:layout_marginTop="@dimen/large"
                android:layout_marginBottom="@dimen/xsmall"
                android:layout_marginLeft="@dimen/xsmall"
                android:layout_marginRight="@dimen/xsmall"
                android:elevation="10dp"
                android:fillViewport="false">


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:elevation="10dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/client1"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:elevation="2dp"
                        android:src="@drawable/client1" />

                    <ImageView
                        android:id="@+id/client2"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/xsmall"
                        android:elevation="4dp"
                        android:src="@drawable/client2" />

                    <ImageView
                        android:id="@+id/client3"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/xsmall"
                        android:elevation="6dp"
                        android:src="@drawable/client3" />

                    <ImageView
                        android:id="@+id/client4"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/xsmall"
                        android:elevation="8dp"
                        android:src="@drawable/client4" />

                    <ImageView
                        android:id="@+id/client5"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/xsmall"
                        android:elevation="8dp"
                        android:src="@drawable/client5" />



                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

