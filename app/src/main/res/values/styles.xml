<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppLoginTheme" parent="Theme.AccountKit">
        <item name="com_accountkit_background_color">@color/ak_background</item>
        <item name="com_accountkit_text_color">@color/ak_text</item>
        <item name="com_accountkit_button_background_color">@color/ak_buttonBackground</item>
        <item name="com_accountkit_button_pressed_background_color">
            @color/ak_buttonPressedBackground
        </item>
        <item name="com_accountkit_button_text_color">@color/ak_buttonText</item>
        <item name="com_accountkit_input_background_color">@color/ak_inputBackground</item>
        <item name="com_accountkit_input_text_color">@color/ak_inputText</item>
        <item name="com_accountkit_status_bar_color">@color/ak_statusBar</item>
        <item name="com_accountkit_icon_color">@color/ak_icon</item>
    </style>


    <style name="Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="WelcomeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/magnitude_circle</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/button_text_medium</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/large</item>
        <item name="android:paddingRight">@dimen/large</item>
    </style>

    <style name="Description">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/button_text_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:paddingLeft">@dimen/large</item>
        <item name="android:paddingRight">@dimen/large</item>
    </style>

    <style name="SocialImageView">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_marginLeft">@dimen/large</item>
    </style>

    <style name="SocialTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">@dimen/caption_small</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:layout_marginLeft">@dimen/large</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/title_large</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/large</item>
        <item name="android:paddingRight">@dimen/large</item>
    </style>

</resources>
